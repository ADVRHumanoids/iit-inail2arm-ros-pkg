<?xml version="1.0"?>
<launch>

    <arg name="pose_x" default="0" />
    <arg name="pose_y" default="0" />
    <arg name="pose_z" default="0" />
    <arg name="pose_roll" default="0" />
    <arg name="pose_pitch" default="0" />
    <arg name="pose_yaw" default="0" />
    
    <arg name="xacroArm" value="$(find inail2arm_urdf)/urdf/inail2arm_robot.urdf.xacro
         x:=$(arg pose_x)
         y:=$(arg pose_y)
         z:=$(arg pose_z)
         r:=$(arg pose_roll)
         p:=$(arg pose_pitch)
         y:=$(arg pose_yaw)
         "
    />
    <param name="gazebo/robot_description" command="$(find xacro)/xacro $(arg xacroArm)" />

    <node name="urdf_spawner_inail2arm" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
          args="-urdf -model inail2arm -param gazebo/robot_description"/>
    
</launch>

